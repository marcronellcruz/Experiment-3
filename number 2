	cout << endl;
	cout << endl;

	cout << "Province A:" << endl;

	cout << endl;

	for (index = 0; index < 7; index++)
		{
			cout << "Day " << index + 1 << ": ";
			cin >> provA[index];

			cout << endl;
		}

	cout << endl;
	cout << endl;

	cout << "Province B:" << endl;

	cout << endl;

	for (index = 0; index < 7; index++)
	{
		cout << "Day " << index + 1 << ": ";
		cin >> provB[index];
		
		cout << endl;
	}

	cout << endl;
	cout << endl;

	cout << "Province C:" << endl;

	cout << endl;

	for (index = 0; index < 7; index++)
	{
		cout << "Day " << index + 1 << ": ";
		cin >> provC[index];

		cout << endl;
